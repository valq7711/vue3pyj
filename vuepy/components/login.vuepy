from asset.rs_vue import V_collector,  RS_vue
from asset.common import asyncer

vc = V_collector()
class Login(RS_vue):
    def __init__(self):
        super(vc, __name__)
        self.template = templ_login
        self.map_store = {
            'login' : 'login*',
            'is_logged':'is_logged',
            'flash': 'flash~'
        }

    def ok(self):
        setTimeout(def(): self.async_ok();, 0)

    @asyncer
    def async_ok(self):
        yield self.login(new FormData(self.$refs.frm))
        if self.is_logged:
            #self.$modal.close()
            self.flash('Hi!', 'ok')
            self.$emit('close')
        else:
            self.flash('invalid password', 'error')
def make():
    return Login()

