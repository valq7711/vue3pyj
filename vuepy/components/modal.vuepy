        is_dia = False
    else:
        vm = new dialog({
            parent,
            propsData,
        })
        is_dia = True
    el = document.body.appendChild(document.createElement('div'))
    vm.$mount(el)

    if not is_dia:
        return vm

    res = None
    p = Promise(def(resolve):
        nonlocal res
        res = resolve
    )
    for e in ['ok', 'cancel', 'close']:
